# EditorConfig is awesome: https://EditorConfig.org
# top-most EditorConfig file
root = true

# Windows-style newlines with a newline ending every file
[*]
end_of_line = crlf
insert_final_newline = true

# Set default charset and indentation style in cs files
[*.cs]
charset = utf-8
indent_style = space
indent_size = 4

# 2 space indentation in yml files
[*.yml]
indent_style = space
indent_size = 2
